{% extends 'base.html.twig' %}

{% block title %}Galerie - FadelArt{% endblock %}

{% block body %}
<style>
    .gallery-container {
        padding: 40px 0;
        background: #f8f9fa;
        min-height: calc(100vh - 200px);
    }
    
    
    .btn-back {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 10px 25px;
        border-radius: 50px;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
    }
    
    .btn-back:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        color: white;
    }
    
    .artwork-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.4s ease;
        height: 100%;
        background: white;
    }
    
    .artwork-card:hover {
        transform: translateY(-15px);
        box-shadow: 0 20px 40px rgba(102, 126, 234, 0.25);
    }
    
    .artwork-image {
        height: 350px;
        object-fit: cover;
        transition: transform 0.4s ease;
    }
    
    .artwork-card:hover .artwork-image {
        transform: scale(1.1);
    }
    
    .artwork-image-container {
        overflow: hidden;
        height: 350px;
        position: relative;
    }
    
    .no-image-placeholder {
        height: 350px;
        background: linear-gradient(135deg, #a8b5d1 0%, #cbd5e0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .no-image-placeholder i {
        font-size: 4rem;
        color: white;
        opacity: 0.7;
    }
    
    .card-body {
        padding: 25px;
    }
    
    .artwork-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 15px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    .artwork-info {
        font-size: 0.95rem;
        color: #718096;
        line-height: 1.8;
        margin-bottom: 15px;
    }
    
    .artwork-author {
        font-size: 0.9rem;
        color: #a0aec0;
        font-style: italic;
        margin-bottom: 20px;
    }
    
    .category-badge {
        display: inline-block;
        padding: 6px 15px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 15px;
    }
    
    .btn-view-details {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 100%;
    }
    
    .btn-view-details:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        color: white;
    }
    
    .empty-state {
        padding: 100px 20px;
        text-align: center;
    }
    
    .empty-icon {
        font-size: 6rem;
        color: #cbd5e0;
        margin-bottom: 30px;
    }
    
    .empty-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 15px;
    }
    
    .empty-description {
        font-size: 1.2rem;
        color: #718096;
        margin-bottom: 40px;
    }
    
    .btn-create-first {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 15px 40px;
        border-radius: 50px;
        font-weight: 700;
        border: none;
        font-size: 1.1rem;
    }
    
    .btn-create-first:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        color: white;
    }
</style>

<div class="gallery-container">
    <div class="container">
        <!-- Header avec bouton retour -->
        <div class="header-section">
            <a href="{{ path('home') }}" class="btn-back">
                <i class="fas fa-arrow-left me-2"></i> 
            </a>
        </div>

        <!-- Articles -->
        {% if articles is empty %}
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-palette"></i>
                </div>
                <h2 class="empty-title">Aucune œuvre pour le moment</h2>
                <p class="empty-description">
                    Soyez le premier à partager votre art avec la communauté !
                </p>
                {% if app.user %}
                    <a href="{{ path('user_article_new') }}" class="btn btn-create-first">
                        <i class="fas fa-plus-circle me-2"></i> Créer ma première œuvre
                    </a>
                {% else %}
                    <a href="{{ path('app_register') }}" class="btn btn-create-first">
                        <i class="fas fa-user-plus me-2"></i> S'inscrire pour partager
                    </a>
                {% endif %}
            </div>
        {% else %}
            <div class="row g-4">
                {% for article in articles %}
                <div class="col-lg-4 col-md-6">
                    <div class="artwork-card">
                        <div class="artwork-image-container">
                            {% if article.imageName %}
                                <img src="{{ vich_uploader_asset(article, 'imageFile') }}" 
                                     class="artwork-image w-100" 
                                     alt="{{ article.title }}">
                            {% else %}
                                <div class="no-image-placeholder">
                                    <i class="fas fa-image"></i>
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="card-body">
                            <span class="category-badge">{{ article.category }}</span>
                            
                            <h5 class="artwork-title" title="{{ article.title }}">
                                {{ article.title }}
                            </h5>
                            
                            <div class="artwork-info">
                                <div class="mb-2">
                                    <i class="fas fa-user-tie me-2" style="color: #667eea;"></i>
                                    <strong>Artiste :</strong> {{ article.artist }}
                                </div>
                            </div>
                            
                            <p class="artwork-author">
                                <i class="fas fa-user-circle me-1"></i>
                                Par {{ article.author.firstName }} {{ article.author.lastName }}
                            </p>
                            
                            <a href="{{ path('blog_show', {id: article.id}) }}" class="btn btn-view-details">
                                <i class="fas fa-eye me-2"></i> Voir les détails
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            
            <div class="text-center mt-5">
                <p class="text-muted">
                    <i class="fas fa-info-circle me-2"></i>
                    {{ articles|length }} œuvre(s) disponible(s)
                </p>
            </div>
        {% endif %}
    </div>
</div>

{% endblock %}